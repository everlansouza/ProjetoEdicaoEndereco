<div class="container mt-4">
    <h2 class="mb-4">Indivíduo</h2>

    <div class="card mt-2">
        <div class="card-header bg-primary text-white">
            <i class="fas fa-user"></i> Informações Pessoais
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Nome:</dt>
                <dd class="col-sm-7">@Model.Nome</dd>

                <dt class="col-sm-3">Documento:</dt>
                <dd class="col-sm-7">@Model.Documento</dd>

                <dt class="col-sm-3">Data de Nascimento:</dt>
                <dd class="col-sm-7">@Model.DataNascimento.ToShortDateString()</dd>
            </dl>
        </div>
    </div>

    <div class="card mt-2">
        <div class="card-header bg-info text-white">
            <i class="fas fa-phone"></i> Contato
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">DDI:</dt>  
                <dd class="col-sm-7">@Model.IndividuoContato.Ddi</dd> 

                <dt class="col-sm-3">DDD:</dt> 
                <dd class="col-sm-7">@Model.IndividuoContato.Ddd</dd> 

                <dt class="col-sm-3">Telefone:</dt> 
                <dd class="col-sm-7">@Model.IndividuoContato.Telefone</dd> 

                <dt class="col-sm-3">WhatsApp:</dt> 
                <dd class="col-sm-7">@(Model.IndividuoContato.Whatsapp)</dd> 

                <dt class="col-sm-3">Tipo de Contato:</dt> 
                <dd class="col-sm-7">@Model.IndividuoContato.TipoContato</dd> 
            </dl>
        </div>
    </div>

    <div class="card mt-2">
        <div class="card-header bg-success text-white">
            <div class="row">
                <div class="col-6">
                    <i class="fas fa-map-marker-alt"></i> Endereço
                </div>
                <div class="col-6 d-flex justify-content-end">
                    <a asp-controller="IndividuoEnderecos" asp-action="Editar" asp-route-id="@Model.IndividuoEndereco.Id" class="btn btn-primary">Editar</a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">CEP:</dt>
                <dd class="col-sm-7">@Model.IndividuoEndereco.Cep</dd> 

                <dt class="col-sm-3">Logradouro:</dt> 
                <dd class="col-sm-7">@Model.IndividuoEndereco.Logradouro</dd> 

                <dt class="col-sm-3">Bairro:</dt> 
                <dd class="col-sm-7">@Model.IndividuoEndereco.Bairro</dd> 

                <dt class="col-sm-3">Número:</dt> 
                <dd class="col-sm-7">@Model.IndividuoEndereco.Numero</dd> 

                <dt class="col-sm-3">Complemento:</dt> 
                <dd class="col-sm-7">@Model.IndividuoEndereco.Complemento</dd> 

                <dt class="col-sm-3">Estado:</dt> 
                <dd class="col-sm-7">@Model.IndividuoEndereco.Estado.Nome - @Model.IndividuoEndereco.Estado.Uf</dd>

                <dt class="col-sm-3">Cidade:</dt>
                <dd class="col-sm-7">@Model.IndividuoEndereco.Cidade.Nome - @Model.IndividuoEndereco.Cidade.Uf</dd>
            </dl>
        </div>
    </div>

    <div class="card mt-2">
        <div class="card-header bg-warning text-dark">
            <i class="fas fa-car"></i> Carro
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Placa:</dt>
                <dd class="col-sm-7">@Model.Carro.Placa</dd>

                <dt class="col-sm-3">Categoria:</dt>
                <dd class="col-sm-7">@Model.Carro.Categoria</dd>

                <dt class="col-sm-3">Modelo:</dt>
                <dd class="col-sm-7">@Model.Carro.Modelo</dd>

                <dt class="col-sm-3">Ano:</dt>
                <dd class="col-sm-7">@Model.Carro.Ano</dd>
            </dl>
        </div>
    </div>

</div>